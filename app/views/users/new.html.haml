%div
  %h2 Sign up
  %ul
    - @user.errors.full_messages.each do |msg|
      %li= msg

  = form_for @user, url: users_path do |f|
    %p
      = f.label :name
      = f.text_field :name
    %p
      = f.label :password
      = f.password_field :password
    %p
      = f.label :password_confirmation
      = f.password_field :password_confirmation

    = f.submit "Sign up"

